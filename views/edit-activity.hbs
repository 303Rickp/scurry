<div class="wraper">
<div class='container-fliud'>
  <div class="card entry">
    <div class="card-block">

      <h3 class="card-title text-uppercase"><img src="/images/scurrylogo.gif" alt='scurry logo' class='headerLogo'>Scurry</h3>
      <br>
      <h5 id='title' class="card-text entry">Edit Activity:</h5>
      <br>

      <form action='/edit-activity/{{id}}' method='post'>
        <!-- <input type="number" name="admin_id" hidden value={{user_id}}> -->
        <div class="form-group">


         <!-- <select class="form-control" name='activity_id' required>
           <option disabled selected hidden>Choose an Activity</option>
            {{#each activity}}
              <option value={{this.id}}>{{this.activity_name}}</option>
            {{/each}}
         </select> -->

       </div>
        <div class="form-group">
          <input type="text" class="form-control" name="title" placeholder="Edit Title:" value="{{title}}">
        </div>

        <div class="form-group">
          <input type="text" class="form-control" name="address" placeholder="Edit address:" value="{{address}}">
